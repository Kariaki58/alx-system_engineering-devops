#!/usr/bin/env bash
#load balancer set up

sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository ppa:vbernat/haproxy-2.6
sudo apt-get -y install haproxy=2.6.\*
sudo cp -a /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy2.cfg
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
frontend  ehoneah-frontend
        bind *:80
        mode http
        default_backend ehoneah-backend
backend ehoneah-backend
        balance roundrobin
        server web-01 100.25.179.45:80 check
        server web-02 100.25.30.209:80 check
EOF
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy
sudo service haproxy restart
